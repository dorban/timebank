<h1>Listing Pictures</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Url</th>
    <th>Width</th>
    <th>Height</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.type %></td>
    <td><%= picture.url %></td>
    <td><%= picture.width %></td>
    <td><%= picture.height %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Delete', picture, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

