<h1>Listing offers</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Description</th>
    <th>Time</th>
    <th>User</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.category %></td>
    <td><%= offer.name %></td>
    <td><%= offer.description %></td>
    <td><%= offer.time %></td>
    <td><%= offer.user_id %></td>
    <td><%= offer.picture %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

